<form action="/authors" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new author:</p>
  <input type='text' name='author[name]'/><br/>
  <input type='text' name='author[rating]'/><br/>
  <input type='checkbox' name='author[alive]'/><br/>
  <input type='submit'/>
</form>