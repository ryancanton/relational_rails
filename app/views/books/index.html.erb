
<h1>All Books</h1>
<br>
<% if @books != nil %>
   <% @books.each do |book| %>
      <% if book.fiction %>
         <h3><%=link_to("#{book.name}", "/books/#{book.id}")%></h3>
         <h5>Pages: <%= book.pages %></h5>
         <h5>Fiction: <%= book.fiction %></h5>
         <%=link_to("Edit #{book.name}", "/books/#{book.id}/edit")%>
         <%=link_to("Delete #{book.name}", "/books/#{book.id}", method: :delete)%>
         <br>
      <% end %>
   <% end %>
<% end %>
<br>
<a href="/authors">Author Index</a>